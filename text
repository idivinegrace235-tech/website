    <script>
        Document.getElementById(‘contactForm’).addEventListener(‘submit’, function(e) {
            e.preventDefault();
            
            // Simple validation and submission handling
            Const name = document.getElementById(‘name’).value.trim();
            Const email = document.getElementById(‘email’).value.trim();
            Const subject = document.getElementById(‘subject’).value.trim();
            Const message = document.getElementById(‘message’).value.trim();
            
            If (!name || !email || !subject || !message) {
                Alert(‘Please fill in all fields.’);
                Return;
            }
            
            If (!/\S+@\S+\.\S+/.test(email)) {
                Alert(‘Please enter a valid email address.’);
                Return;
            }
            
            // Simulate form submission (in a real app, you’d send to server)
            Alert(‘Thank you for your message! We\’ll get back to you soon.’);
            
            // Reset form
            This.reset();
        });
        
        // Add some interactive elements for uniqueness
        Document.querySelectorAll(‘input, textarea’).forEach(el => {
            El.addEventListener(‘focus’, () => {
                El.parentElement.classList.add(‘ring-2’, ‘ring-blue-500’);
            });
            El.addEventListener(‘blur’, () => {
                El.parentElement.classList.remove(‘ring-2’, ‘ring-blue-500’);
            });
        });
    </script>
